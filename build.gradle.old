// Root build file for multi-version support
// This orchestrates building all version-specific modules

plugins {
	id 'base'
}

// Aggregate tasks to build all versions
subprojects {
	group = rootProject.group
	version = rootProject.version
}

// Task to build all versions
task buildAll {
	group = 'build'
	description = 'Builds all Minecraft version variants'
	dependsOn subprojects.collect { it.tasks.matching { it.name == 'build' } }
}

// Task to clean all versions
task cleanAll {
	group = 'build'
	description = 'Cleans all Minecraft version variants'
	dependsOn subprojects.collect { it.tasks.matching { it.name == 'clean' } }
}

// Default build task builds all versions
defaultTasks 'buildAll'